<%- include("partials/_header"); %>

<!--form para registro de personas-->

<!-- validar campo DNI -->
<script>
    function handleChange() {
        let tipo_doc = document.getElementById("tipo_doc").value;
        let pattern = "";
        if (tipo_doc === "Cedula colombiana") {
            pattern = "[0-9]{8,10}";
        } else if (tipo_doc === "Pasaporte") {
            pattern = "[A-Za-z0-9]{7,20}";
        }
        document.getElementById("doc_identidad").pattern = pattern;
        console.log(tipo_doc);
    }
</script>

    <div class="card" style="align-items: center;" >
        <div class="card-body"  style="text-align: center;">
            <form action="/personas/registrar_persona" 
                    method="post" > 
                <h5>Registro de personas</h5>
                <div class="form-group">
                    Tipo documento:
                    <select id="tipo_doc" name="tipo_doc" onchange="handleChange()">
                        <option value="Cedula colombiana">Cedula colombiana</option>
                        <option value="Pasaporte">Pasaporte</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="text" 
                    id="doc_identidad"
                    name="doc_identidad" 
                    placeholder="Documento de identidad" 
                    class="form-control"
                    required="true"
                    onchange="handleChange()"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group"> 
                    <input type="text" 
                    name="nombres" 
                    placeholder="Nombres" 
                    class="form-control"
                    required
                    pattern = "[A-Za-z]{1,40}"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="text" 
                    name="apellidos" 
                    placeholder="Apellidos" 
                    class="form-control"
                    required
                    pattern = "[A-Za-z0-9]{1,40}"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="date" 
                    name="fecha_nacimiento" 
                    placeholder="Fecha de nacimiento" 
                    class="form-control"
                    required
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="text" 
                    name="telefono" 
                    placeholder="Telefono" 
                    class="form-control"
                    pattern = "[0-9]{7,20}"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="email" 
                    name="email" 
                    placeholder="Email" 
                    class="form-control"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="text" 
                    name="ocupacion" 
                    placeholder="Ocupacion" 
                    class="form-control"
                    pattern = "[A-Za-z0-9]{1,20}"
                    style="margin-bottom: 5px;">
                </div>
                <div class="form-group">
                    <input type="text" 
                    name="sexo" 
                    placeholder="Sexo" 
                    class="form-control"
                    pattern = "[A-Za-z]{1,20}"
                    style="margin-bottom: 5px;">
                </div>
                <button class="btn btn-primary" type="submit">Regitrar</button>
            </form>
        </div>
    </div>
